use pnet_macros_support::types::*;
use std::num::Wrapping;

#[packet]
/// Packet header for the [RTP Control Protocol].
///
/// [RTP Control Protocol]: https://tools.ietf.org/html/rfc3550#section-6
pub struct Rtcp {
	pub version: u2,

	pub padding: u1,

	pub rx_report_count: u5,

	#[construct_with(u8)]
	pub packet_type: RtcpType,

	pub pkt_length: u16be,

	pub ssrc: u32be,

	#[payload]
	pub payload: Vec<u8>,
}